{{>layout/header}}
<h1 id="editTitle">게시글 보기: {{post.id}}</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" readonly value="{{post.title}}"/>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" readonly value="{{post.author}}"/>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" readonly>{{post.content}}</textarea>
            </div>
        </form>

        <a role="button" href="/" class="btn btn-primary">메인으로</a>
    </div>
</div>
{{>layout/footer}}